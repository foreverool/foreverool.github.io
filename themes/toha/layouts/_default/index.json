{{- $.Scratch.Add "index" slice -}}
{{- $pages := where .Site.RegularPages "Layout" "!=" "search" -}}
{{- $pages = where $pages "Params.hidden" "!=" true -}}
{{- range $pages -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "hero" (partial "helpers/get-hero.html" .) "date" (.Date.Format  site.Params.dateFormat) "summary" .Summary "tags" .Params.tags "categories" .Params.categories "contents" .Plain "permalink" .Permalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}